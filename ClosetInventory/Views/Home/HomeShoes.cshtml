@model ClosetInventory.Models.TotalViewModel
@{
    ViewBag.Title = "HomeShoes";
}

<h2>HomeShoes</h2>

@Html.Partial("_PartialUserHomePage", Model)
@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Outfit</h4>
        <hr />

        <div class="form-group">
            @Html.HiddenFor(model => Model.Outfit)
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wear Outfit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@foreach (var item in Model.Shoes)
{
    <table>
        <tr>
            <td>
                <img src="@item.SmallFile" id="shoesImage" onclick="MoveShoesToOutfit(item.SmallFile)" />

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Shoes", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", "Shoes", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", "Shoes", new { id = item.Id })
            </td>
        </tr>
    </table>
}

<script>

    function MoveShoeToOutfit(smallFile) {

        $('#outfitShoe')
            .replaceWith('<div id="outfitShoe"><img id="shoe" src="#" /></div>'
            .replace("#", smallFile));
    }
</script>